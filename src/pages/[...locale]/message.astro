---
import { getEntry, render } from "astro:content";
import config, { monolocale } from "$config";
import Base from "$layouts/Base.astro";
import i18nit from "$i18n";
import Giscus from "$components/Giscus.svelte";

export async function getStaticPaths() {
	return config.i18n.locales.map(locale => ({
		params: { locale: config.i18n.defaultLocale === locale ? undefined : locale }
	}));
}

const { locale = config.i18n.defaultLocale } = Astro.params;
const t = i18nit(locale);

// 获取留言板内容
const messageContent = await getEntry("information", `${monolocale ? "" : locale}/message`);
const { Content } = messageContent ? await render(messageContent) : { Content: null };
---

<style lang="less">
  .message-wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;

    .intro-section {
      padding: 2rem;
      border-radius: 1rem;
      background: rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(20px) saturate(180%);
      -webkit-backdrop-filter: blur(20px) saturate(180%);
      border: 2px solid rgba(255, 255, 255, 0.8);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);

      @media (prefers-color-scheme: dark) {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      [data-theme="dark"] & {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      [data-theme="light"] & {
        background: rgba(255, 255, 255, 0.5);
        border: 2px solid rgba(255, 255, 255, 0.8);
      }

      :global(.markdown) {
        h2 {
          font-size: 1.3rem;
          margin-top: 1.5rem;
          margin-bottom: 0.8rem;
          
          &:first-child {
            margin-top: 0;
          }
        }

        blockquote {
          border-left-color: var(--primary-color);
          padding-left: 1.2rem;
          margin: 1rem 0;
          
          p {
            color: var(--secondary-color);
            font-style: italic;
            line-height: 1.8;
          }
        }

        ul {
          margin: 0.5rem 0;
          
          li {
            margin: 0.3rem 0;
          }
        }

        hr {
          margin: 1.5rem 0;
          border-bottom: 1px dashed var(--weak-color);
        }
      }
    }

    .comments-section {
      margin-top: 1rem;
    }
  }
</style>

<Base title={t("navigation.message")} {locale} description={t("message.description")}>
  <main class="flex flex-col gap-6">
    <header class="flex flex-col gap-4">
      <h1 class="text-3xl">{t("navigation.message")}</h1>
      <p class="text-lg c-remark">{t("message.description")}</p>
      <hr class="b-b b-b-solid b-weak" />
    </header>

    <div class="message-wrapper">
      {Content && (
        <section class="intro-section markdown">
          <Content />
        </section>
      )}

      <section class="comments-section">
        <Giscus 
			    client:load
			    repo="sseaan/blog-giscus"
          repoId="R_kgDOQuo0zA"
          category="Announcements"
          categoryId="DIC_kwDOQuo0zM4C0ObZ"
          lang="zh-CN"
          lightTheme="noborder_light"
          darkTheme="noborder_dark"
		/>
      </section>
    </div>
  </main>
</Base>